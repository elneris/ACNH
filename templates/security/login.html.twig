{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <section class="keep-touch">
        <div class="container">
            <h2>Connexion</h2>
            <p>Le monde de la bourse n'attends que vous</p>
            <span class="dot-dash dark">.</span>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="keep-touch--white">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn btn btn-primary mt-5" type="submit">Se connecter</button>
                        <a class="btn btn btn-primary mt-5" href="{{ path('member_registration') }}">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
{% endblock %}
